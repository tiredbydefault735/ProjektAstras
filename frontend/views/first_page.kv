<SimulationScreen>:
    id: first_screen
    md_bg_color: root.md_bg_color
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        BoxLayout:
            size_hint_y: None
            height: dp(50)

            MDIconButton:
                id: btn_back
                icon: 'arrow-left'
                icon_size: '32sp'
                theme_text_color: 'Custom'
                text_color: 1,1,1,1
                on_release: root.go_to_menu(self)

            MDLabel:
                text: 'Arachfara Simulation'
                halign: 'center'
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: 1,1,1,1

            MDIconButton:
                icon: 'window-close'
                icon_size: '32sp'
                theme_text_color: 'Custom'
                text_color: 1,1,1,1
                on_release: root.close_app(self)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 15

            MDCard:
                elevation: 4
                radius: [8]
                md_bg_color: 0.15,0.15,0.15,1

                SimulationMap:
                    id: map_view

            MDCard:
                id: sidebar_card
                orientation: 'vertical'
                size_hint_x: 0.35
                padding: 0
                spacing: 0
                elevation: 4
                radius: [8]
                md_bg_color: 0.2,0.2,0.2,1

                BoxLayout:
                    id: tab_bar
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(60)
                    spacing: 0

                    MDRaisedButton:
                        id: btn_tab_region
                        text: 'Region'
                        size_hint_x: 0.5
                        size_hint_y: 1
                        md_bg_color: 0.8,0.1,0.1,1
                        elevation: 0
                        on_release: root.switch_tab('region')

                    MDRaisedButton:
                        id: btn_tab_species
                        text: 'Spezies'
                        size_hint_x: 0.5
                        size_hint_y: 1
                        md_bg_color: 0.25,0.25,0.25,1
                        elevation: 0
                        on_release: root.switch_tab('species')

                BoxLayout:
                    id: sidebar_content
                    orientation: 'vertical'
                    padding: 10

        BoxLayout:
            orientation: 'horizontal'
            spacing: 15
            size_hint_y: 0.25

            MDCard:
                elevation: 4
                padding: 10
                radius: [8]
                md_bg_color: 0.15,0.15,0.15,1

                MDScrollView:
                    MDLabel:
                        id: log_label
                        text: '[color=ff3333]System:[/color] Initialisiert.\n[color=ff3333]System:[/color] Bereit.'
                        markup: True
                        size_hint_y: None
                        valign: 'top'
                        adaptive_height: True
                        theme_text_color: 'Secondary'

            MDCard:
                orientation: 'vertical'
                size_hint_x: 0.4
                padding: 15
                spacing: 10
                elevation: 4
                radius: [8]
                md_bg_color: 0.2,0.2,0.2,1

                MDRaisedButton:
                    text: 'Statistiken Exportieren'
                    size_hint_x: 1
                    md_bg_color: 0.3,0.3,0.3,1
                    padding: 0,20,0,20

                BoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True
                    padding: 0,10,0,0
                    spacing: 20
                    pos_hint: {'center_x': 0.5}

                    MDIconButton:
                        id: btn_play
                        icon: 'play'
                        icon_size: '48sp'
                        theme_text_color: 'Custom'
                        text_color: 0.8,0.1,0.1,1
                        on_release: root.toggle_simulation(self)

                    MDIconButton:
                        id: btn_pause
                        icon: 'pause'
                        icon_size: '48sp'
                        theme_text_color: 'Secondary'

                    MDIconButton:
                        id: btn_stop
                        icon: 'stop'
                        icon_size: '48sp'
                        theme_text_color: 'Secondary'

                MDLabel:
                    id: time_label
                    text: 'Laufzeit: 0000'
                    halign: 'center'
                    font_style: 'H5'
                    theme_text_color: 'Primary'

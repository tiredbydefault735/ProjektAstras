#:import dp kivy.metrics.dp

<StartScreen>:
    id: start_screen
    md_bg_color: root.md_bg_color
    BoxLayout:
        orientation: 'horizontal'
        spacing: dp(20)
        padding: dp(20)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Image:
            id: logo
            source: root.logo_path
            allow_stretch: True
            keep_ratio: True
            size_hint_x: 0.45
            size_hint_y: 0.9

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(15)
            padding: dp(20)
            size_hint_x: 0.55

            MDLabel:
                text: 'PROJEKT ASTRAS'
                font_style: 'H4'
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 1,1,1,1
                size_hint_y: None
                height: dp(40)

            MDLabel:
                text: 'Simulation v1.0'
                font_style: 'Subtitle1'
                halign: 'center'
                theme_text_color: 'Secondary'
                size_hint_y: None
                height: dp(30)

            MDLabel:
                size_hint_y: None
                height: dp(20)

            MDRectangleFlatButton:
                id: btn_start
                text: 'START SIMULATION'
                size_hint_x: 1
                ripple_alpha: 0
                on_release: root.go_to_simulation(self)

            MDRectangleFlatButton:
                id: btn_settings
                text: 'EINSTELLUNGEN'
                ripple_alpha: 0
                size_hint_x: 1

            MDRectangleFlatButton:
                id: btn_exit
                text: 'SCHLIESSEN'
                ripple_alpha: 0
                size_hint_x: 1
                on_release: root.close_app(self)

